<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="StandardCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:transitionName">@string/transition_card</item>
        <item name="android:clipToPadding">true</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_300</item>
        <item name="cardCornerRadius">@dimen/default_corner_radius</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="CardTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_marginBottom">@dimen/small_space</item>
        <item name="android:textColor">@color/black_alpha_87</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardBody">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/black_alpha_54</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardDetails">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/black_alpha_54</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CardSource">
        <item name="android:textColor">@color/black_alpha_54</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardMoreIcon" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/card_options_icon_size</item>
        <item name="android:layout_height">@dimen/card_options_icon_size</item>
        <item name="android:src">@drawable/ic_more_vert</item>
        <item name="android:padding">@dimen/small_space</item>
        <item name="android:layout_marginStart">@dimen/default_space</item>
        <item name="android:tint">@color/grey_400</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="CardOutlinedMoreIcon" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/card_options_icon_size</item>
        <item name="android:layout_height">@dimen/card_options_icon_size</item>
        <item name="android:padding">@dimen/small_space</item>
        <item name="android:src">@drawable/ic_more_vert</item>
        <item name="android:layout_marginStart">@dimen/default_space</item>
        <item name="android:tint">@color/grey_400</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="BottomDialog" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomDialog</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

</resources>
