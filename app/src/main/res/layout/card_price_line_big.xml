<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/tiny_space"
    android:paddingBottom="@dimen/tiny_space">

    <TextView
        android:id="@+id/nameTextView"
        style="@style/Text.Body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="none"
        android:maxLines="5"
        android:scrollHorizontally="false"
        tools:text="Line name" />

    <TextView
        android:id="@+id/priceTextView"
        style="@style/Text.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/small_space"
        android:gravity="end"
        android:minWidth="50dp"
        android:textColor="@color/light_green_600"
        tools:text="Price" />

    <ImageView
        android:id="@+id/favoriteDish"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/small_space"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="@dimen/tiny_space"
        android:src="@drawable/star_toggle" />

</LinearLayout>
