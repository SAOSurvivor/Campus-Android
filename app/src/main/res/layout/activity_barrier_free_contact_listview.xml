<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/small_space"
    android:paddingEnd="@dimen/default_space"
    android:paddingStart="@dimen/default_space"
    android:paddingTop="@dimen/small_space">

    <TextView
        android:id="@+id/barrierfreeContactNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        tools:text="Person Name"/>

    <TextView
        android:id="@+id/barrierfreeContactPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space"
        android:autoLink="phone"
        android:textSize="@dimen/semilarge_text_size"
        tools:text="Person Phone Number"/>

    <TextView
        android:id="@+id/barrierfreeContactEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tiny_space"
        android:autoLink="email"
        android:textSize="@dimen/semilarge_text_size"
        tools:text="Person E-mail"/>

    <TextView
        android:id="@+id/barrierfreeContactMoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/small_space"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:textSize="@dimen/semilarge_text_size"
        android:visibility="gone"
        tools:text="Person More info"
        tools:visibility="visible"/>

</LinearLayout>