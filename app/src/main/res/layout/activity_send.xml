<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/rel_layout"
    tools:context=".Send">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar_send"/>

    <EditText

        android:layout_width="200dp"
        android:layout_below="@id/toolbar_send"
        android:layout_height="wrap_content"
        android:id="@+id/name_text_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:hint="Name"
        />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        app:cornerRadius="@dimen/material_corner_radius"
        android:text="Ask Questions" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/start_button"
        android:layout_marginTop="20dp"
        app:cornerRadius="@dimen/material_corner_radius"
        android:text="Stop Conversation" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/get_ip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop_button"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:cornerRadius="@dimen/material_corner_radius"
        android:text="Join Lecture" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/send_request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/get_ip_button"
        android:layout_marginTop="20dp"
        app:cornerRadius="@dimen/material_corner_radius"
        android:text="Join Queue" />

        android:layout_alignLeft="@+id/start_button"
        android:layout_below="@+id/stop_button"
        android:layout_marginTop="20dp"
        android:text="Get IP" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sos"
        android:layout_centerHorizontal="true"
        app:cornerRadius="@dimen/material_corner_radius"
        android:layout_below="@+id/send_request_button"
        android:layout_marginTop="20dp"
        android:text="Poke The Prof"
        />
</RelativeLayout>