<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/StandardCard">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:onClick="restoreCards"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_space"
        android:paddingTop="@dimen/small_space"
        android:paddingEnd="@dimen/default_space"
        android:paddingBottom="@dimen/small_space">

        <TextView
            android:id="@+id/textView"
            style="@style/Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/ic_action_restore"
            android:drawablePadding="@dimen/default_space"
            android:text="@string/restore_all_cards"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>