<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <include
            layout="@layout/layout_all_errors"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">

                    <TextView
                        android:id="@+id/ticket_type_spinner_container_header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_space"
                        android:layout_marginTop="@dimen/default_space"
                        android:layout_marginEnd="@dimen/default_space"
                        android:layout_marginBottom="@dimen/default_space"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/select_tickets"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/tum_500"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ticket_amounts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ticket_type_spinner_container_header" />

                    <TextView
                        android:id="@+id/ticket_details_price_title"
                        android:layout_width="0pt"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_space"
                        android:layout_marginTop="@dimen/default_space"
                        android:text="@string/total"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/tum_500"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ticket_amounts" />

                    <TextView
                        android:id="@+id/ticket_total_price"
                        android:layout_width="0pt"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_space"
                        android:layout_marginEnd="@dimen/default_space"
                        android:layout_marginBottom="@dimen/default_space"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="?android:attr/textColorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ticket_details_price_title"
                        tools:text="Price" />

                    <TextView
                        android:id="@+id/details_header_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_space"
                        android:layout_marginTop="@dimen/large_space"
                        android:layout_marginEnd="@dimen/default_space"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/purchase_details"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/tum_500"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ticket_total_price" />

                    <TextView
                        android:id="@+id/ticket_details_event_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_space"
                        android:layout_marginTop="@dimen/default_space"
                        android:text="@string/event"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/tum_500"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/details_header_text_view" />

                    <TextView
                        android:id="@+id/ticket_details_event"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_space"
                        android:layout_marginEnd="@dimen/default_space"
                        android:layout_marginBottom="@dimen/default_space"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="?android:attr/textColorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ticket_details_event_title"
                        tools:text="Details" />

                    <TextView
                        android:id="@+id/ticket_details_location_title"
                        android:layout_width="0pt"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_space"
                        android:layout_marginTop="@dimen/default_space"
                        android:text="@string/location"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/tum_500"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ticket_details_event" />

                    <TextView
                        android:id="@+id/ticket_details_location"
                        android:layout_width="0pt"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_space"
                        android:layout_marginEnd="@dimen/default_space"
                        android:layout_marginBottom="@dimen/default_space"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="?android:attr/textColorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ticket_details_location_title"
                        tools:text="Location" />

                    <TextView
                        android:id="@+id/ticket_details_date_title"
                        android:layout_width="0pt"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_space"
                        android:layout_marginTop="@dimen/default_space"
                        android:text="@string/date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/tum_500"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ticket_details_location" />

                    <TextView
                        android:id="@+id/ticket_details_date"
                        android:layout_width="0pt"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_space"
                        android:layout_marginEnd="@dimen/default_space"
                        android:layout_marginBottom="@dimen/default_space"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="?android:attr/textColorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ticket_details_date_title"
                        tools:text="Date" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/paymentButton"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/default_space"
                        android:text="@string/continue_to_payment"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/tum_500"
                        app:cornerRadius="@dimen/default_corner_radius"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ticket_details_date" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

            <include layout="@layout/loading_overlay" />

        </FrameLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
